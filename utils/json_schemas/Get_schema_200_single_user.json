{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "GET response schema for single user",
  "type": "object",
  "required": [
      "data"
    ],
   "properties": {
     "data": {
       "type": "object",
       "title": "The Data Schema",
       "required": [
         "id",
         "first_name",
         "last_name",
         "avatar"
       ],
       "properties": {
         "id": {
           "type": "integer"
         },
         "first_name": {
           "type": "string"
         },
         "last_name": {
           "type": "string"
         },
         "avatar": {
           "type": "string"
         }
        }
      }
    }
}